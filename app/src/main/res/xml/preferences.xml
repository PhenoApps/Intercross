<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/cross_mode_array"
        android:entryValues="@array/cross_mode_array_values"
        android:icon="@drawable/ic_scanning"
        android:key="org.phenoapps.intercross.SCAN_MODE"
        android:summary="%s"
        android:title="@string/cross_mode" />
    <EditTextPreference
        android:icon="@drawable/ic_about"
        android:key="org.phenoapps.intercross.FIRST_NAME"
        android:summary="First displayed name of person."
        android:title="First Name" />
    <EditTextPreference
        android:icon="@drawable/ic_about"
        android:key="org.phenoapps.intercross.LAST_NAME"
        android:summary="Last displayed name of person."
        android:title="Last Name" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_tutorial"
        android:key="org.phenoapps.intercross.TUTORIAL_MODE"
        android:summary="Always display the tutorial when Intercross is opened."
        android:title="Tutorial" />
</PreferenceScreen>