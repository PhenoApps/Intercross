<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/scan_mode_array"
        android:entryValues="@array/scan_mode_array_values"
        android:icon="@drawable/ic_scanning"
        android:key="edu.ksu.wheatgenetics.verify.SCAN_MODE"
        android:summary="%s"
        android:title="@string/prefs_mode" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_audio"
        android:key="edu.ksu.wheatgenetics.verify.AUDIO_ENABLED"
        android:summary="Check to disable/enable sound."
        android:title="@string/prefs_audio" />
</PreferenceScreen>