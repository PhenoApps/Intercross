<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/scan_mode_array"
        android:entryValues="@array/scan_mode_array_values"
        android:icon="@drawable/ic_scanning"
        android:key="edu.ksu.wheatgenetics.verify.SCAN_MODE"
        android:summary="%s"
        android:title="@string/prefs_mode" />
    <EditTextPreference
        android:icon="@drawable/ic_about"
        android:key="edu.ksu.wheatgenetics.verify.USER_NAME"
        android:summary="Logged user for scanned items"
        android:title="Username" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_audio"
        android:key="edu.ksu.wheatgenetics.verify.AUDIO_ENABLED"
        android:summary="Check to disable/enable sound."
        android:title="@string/prefs_audio" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_tutorial"
        android:key="edu.ksu.wheatgenetics.verify.TUTORIAL_MODE"
        android:summary="Enable tutorial mode."
        android:title="Tutorial" />
</PreferenceScreen>