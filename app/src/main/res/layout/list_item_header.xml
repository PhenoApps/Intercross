<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name='type'
            type='int'/>
        <variable
            name='name'
            type='String'/>
        <variable
            name='current'
            type='int'/>
        <variable
            name='goal'
            type='int'/>
    </data>

    <LinearLayout
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_cell"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@{name}"
            android:textSize="12sp"
            android:visibility="@{type == 2 ? View.VISIBLE : View.GONE}"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_cell"
            android:visibility="@{type == 0 ? View.VISIBLE : View.GONE}" />

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{type == 1 ? View.VISIBLE : View.GONE}"
            android:progress="@{current}"
            android:max="@{goal}"/>

    </LinearLayout>
</layout>